<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <!-- Briefing Container -->
    <div id="briefing-container"
         data-controller="briefing"
         data-briefing-user-id-value="<%= @user_id %>"
         data-briefing-date-value="<%= @date %>">

      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Daily Briefing</h1>
        <p class="text-gray-500 mt-1"><%= Date.parse(@date).strftime('%A, %B %d') %></p>
      </div>

      <!-- Loading State -->
      <div id="loading-state" class="hidden">
        <div class="bg-white rounded-xl p-6 shadow-sm mb-4">
          <div class="flex items-center gap-3">
            <div class="animate-spin h-5 w-5 border-2 border-blue-500 border-t-transparent rounded-full"></div>
            <span class="text-gray-600">Generating your personalized briefing...</span>
          </div>
        </div>
      </div>

      <!-- Greeting -->
      <div id="greeting" class="hidden mb-6">
        <p id="greeting-text" class="text-xl text-gray-700"></p>
      </div>

      <!-- Insights Container -->
      <div id="insights-container" class="space-y-4 mb-6"></div>

      <!-- Suggestions Container -->
      <div id="suggestions-container" class="space-y-4"></div>

      <!-- Generate Button -->
      <div id="generate-section" class="mt-8">
        <button id="generate-btn"
                data-action="click->briefing#generate"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-xl transition-colors">
          Generate Briefing
        </button>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden">
        <div class="bg-red-50 border border-red-200 rounded-xl p-4">
          <p id="error-message" class="text-red-700"></p>
        </div>
      </div>

      <!-- Complete State -->
      <div id="complete-state" class="hidden mt-6">
        <div class="bg-green-50 border border-green-200 rounded-xl p-4">
          <p class="text-green-700">Briefing complete!</p>
        </div>
      </div>
    </div>
  </div>
</div>

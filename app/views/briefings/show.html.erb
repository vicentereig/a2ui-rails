<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-5xl mx-auto px-4">
    <!-- Briefing Container -->
    <div id="briefing-container"
         data-controller="briefing"
         data-briefing-user-id-value="<%= @user_id %>"
         data-briefing-date-value="<%= @date %>">

      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Daily Briefing</h1>
        <p class="text-gray-500 mt-1"><%= Date.parse(@date).strftime('%A, %B %d') %></p>
      </div>

      <!-- Loading State -->
      <div id="loading-state" class="hidden">
        <div class="bg-white rounded-xl p-6 shadow-sm mb-4">
          <div class="flex items-center gap-3">
            <div class="animate-spin h-5 w-5 border-2 border-blue-500 border-t-transparent rounded-full"></div>
            <span class="text-gray-600">Generating your personalized briefing...</span>
          </div>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Left Column: Insights -->
        <div>
          <h2 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-4">Insights</h2>
          <div id="insights-container" class="bg-white rounded-xl p-4 shadow-sm space-y-2 divide-y divide-gray-100"></div>
        </div>

        <!-- Right Column: Suggestions -->
        <div>
          <h2 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-4">Suggestions</h2>
          <div id="suggestions-container" class="space-y-3"></div>
        </div>
      </div>

      <!-- Generate Button -->
      <div id="generate-section" class="mt-8">
        <button id="generate-btn"
                data-action="click->briefing#generate"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors">
          Generate Briefing
        </button>
      </div>

      <!-- Warning State -->
      <div id="warning-state" class="hidden mt-6">
        <div class="bg-amber-50 border border-amber-200 rounded-xl p-4">
          <p id="warning-message" class="text-amber-800"></p>
        </div>
      </div>

      <!-- Error State -->
      <div id="error-state" class="hidden">
        <div class="bg-red-50 border border-red-200 rounded-xl p-4">
          <p id="error-message" class="text-red-700"></p>
        </div>
      </div>

      <!-- Complete State -->
      <div id="complete-state" class="hidden mt-6 text-center">
        <p class="text-sm text-gray-500">Briefing complete</p>
      </div>
    </div>
  </div>
</div>

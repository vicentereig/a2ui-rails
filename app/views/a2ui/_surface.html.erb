<%# Renders a complete A2UI surface %>
<turbo-frame id="<%= surface.id %>">
  <%= turbo_stream_from "a2ui:#{surface.id}" %>
  <%= render partial: 'a2ui/data', locals: { surface: surface } %>

  <% if surface.root_id && (root = surface.components[surface.root_id]) %>
    <%= render A2UI::Components::Renderer.for(
      root,
      surface_id: surface.id,
      components_lookup: surface.components,
      data: surface.data
    ) %>
  <% end %>
</turbo-frame>
